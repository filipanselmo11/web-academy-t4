<div class='d-flex justify-content-between'>
  <h3>
    Listagem de produtos
  </h3>
  <a type='button' class='btn btn-primary' href='/produtos/create'>Criar Produto</a>
</div>

<table class='table table-striped table-hover mt-4'>
  <thead>
    <tr>
      <th scope='col'>Nome</th>
      <th scope='col'>Preço</th>
      <th scope='col'>Estoque</th>
      <th scope='col'>Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each produtos}}
      <tr>
        <td>{{nome}}</td>
        <td>{{preco}}</td>
        <td>{{estoque}}</td>
        <td>
          <a href='/produtos/{{id}}'>
            <i class='bi bi-eye'></i>
          </a>
          <a href='/produtos/{{id}}/edit'>
            <i class='bi bi-pencil'></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>